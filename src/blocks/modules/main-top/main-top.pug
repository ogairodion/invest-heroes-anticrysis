section.main-top
    .main-top__back.main-top__back--top
        img(src="img/svg/main-top/back-top.svg", alt="")
    .main-top__back.main-top__back--bottom
        img(src="img/svg/main-top/back-bottom.svg", alt="")
    .l-default 
        .main-top__info
            h1.main-top__title.title.title--h1 КУРС: <span>Антикризис 1.0</span>
