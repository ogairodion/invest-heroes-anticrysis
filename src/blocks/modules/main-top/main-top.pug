            .main-top__text в условиях кризиса и высокой неопределённости
            .main-top__bottom
                a.main-top__btn.btn.btn--blue.scroll(href="#prices")
                    .btn__text Участвовать
                    .btn__icon
                        img.lazy(data-src="img/svg/like.svg", alt="")
